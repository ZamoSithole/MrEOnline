@using MrEOnline.Models;
@model MrE.Models.Entities.Video

@{
    ViewBag.Title = "Edit Video";
}
@if (ViewData["ViewMessage"] != null)
{
    @Html.Partial("_Feedback", (ViewData["ViewMessage"] as ViewMessage))
}
<div class="panel panel-default">
    <div class="panel-heading">@ViewBag.Title</div>
    <div class="panel-body">
        @if (Model.Data == null)
        {

        }
        else
        {
            <div class="row">
                <img src="data:image/png;base64,@System.Convert.ToBase64String(Model.Data)" height="350px" width="100%" />
            </div>
        }
        <br />
        <div>

            <!-- Nav tabs -->
            <ul class="nav nav-tabs" role="tablist">
                <li role="presentation" class="active"><a href="#movie-info" aria-controls="movie" role="tab" data-toggle="tab">Movie Info</a></li>
                <li role="presentation"><a href="#cast-list" aria-controls="profile" role="tab" data-toggle="tab">Cast</a></li>
            </ul>

            <!-- Tab panes -->
            <div class="tab-content">
                <div role="tabpanel" class="tab-pane active" id="movie-info">
                    @using (Html.BeginForm("Edit", "Video", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => model.Id)
                        @Html.HiddenFor(m => m.DateCreated)
                        @Html.HiddenFor(m => m.DateUpdated)
                        @Html.HiddenFor(m => m.IsDeleted)
                        @Html.HiddenFor(m => m.DateDeleted)

                        @Html.Partial("_Form")

                    }
                </div>
                <div role="tabpanel" class="tab-pane" id="cast-list">
                    @Html.Action("IndexPartial", "Cast", new { videoId = Model.Id })
                </div>
            </div>

        </div>


    </div>
</div>

