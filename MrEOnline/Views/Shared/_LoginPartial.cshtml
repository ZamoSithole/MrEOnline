@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated) {
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "form-inline " })) {
        @Html.AntiForgeryToken()

        <ul class="nav justify-content-end nav-pills">
            <li class="nav-item">
                @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage", @class = "nav-link" })
            </li>
            <li class="nav-item"><a href="javascript:document.getElementById('logoutForm').submit()" class="nav-link" >Log off</a></li>
        </ul>
    }
} else {
    <ul class="nav justify-content-end nav-pills">
        <li class="nav-item">
            <a class="nav-link active" href="@Url.Action("Register", "Account", new { id = "registerLink" })">Register</a>  
        </li>
        <li class="nav-item">
            <a class="nav-link" href="@Url.Action("Login", "Account", new { id = "loginLink" })">Log in</a>
        </li>
    </ul>
}
