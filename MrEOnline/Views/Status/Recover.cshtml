@model MrE.Models.Entities.Status

@{
    ViewBag.Title = "Recover";
}
<div class="card">
    <div class="card-header">@ViewBag.Title</div>
    <div class="card-body">
        <div class="alert alert-warning">
            <p>
                <i class="fa fa-question-circle-o"></i>&nbsp;Are you sure you want to recover the information below?
            </p>
        </div>
        @using (Html.BeginForm())
        {
            @Html.Partial("_Details")
            <button type="submit" class="btn btn-outline-success">
                <i class="fa fa-thumbs-o-up"></i>&nbsp;Yes, please
            </button>
            <a href="@Url.Action("index")" class="btn btn-outline-secondary">
                <i class="fa fa-thumbs-o-down"></i>&nbsp;No, please
            </a>
        }
    </div>
</div>